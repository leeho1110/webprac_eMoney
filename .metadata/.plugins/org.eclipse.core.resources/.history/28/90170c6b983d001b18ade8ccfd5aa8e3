<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.webPrac.dao.BoardDaoMapper">

	<insert id="insertPost" parameterType="BoardVO">
		INSERT INTO board VALUES (seq_board.nextVal, #{title}, #{content}, #{writer}, sysdate+9/24)
	</insert> 
	
	<select id="getTotalBoardCnt" resultType="_int">
		select count(*) as cnt from getTotalBoardCnt
	</select>
	
	<select id="getTotalBoardList" parameterType="">
	SELECT *  FROM (
			SELECT ROWNUM RN, A.* 
				FROM (
						SELECT * 
						FROM BOARD 
						ORDER BY POST_NUM DESC 
						) A
				)
	WHERE RN BETWEEN #{start} AND #{end};
	</select>
</mapper>