<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.webPrac.dao.LoginDaoMapper">
	
	<select id="checkLoginInfo" parameterType="LoginVO" resultType="MemberVO">
		SELECT * FROM ACCOUNT WHERE id = #{id}
	</select>
	
	<update id="updateLastlogin" parameterType="_int">
		UPDATE ACCOUNT SET LAST_LOGINDATE = sysdate WHERE ACCNT_ID = #{1}
	</update>
	
	<insert id="insertLastloginhistory" parameterType="LoginVO">
		INSERT INTO login_history VALUES (seq_loginHistory.nextval, #{accnt_id}, sysdate, #{is_mobile}, #{ip}, #{browser}, #{os});
	</insert>
	
</mapper>